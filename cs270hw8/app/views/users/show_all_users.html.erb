<table>
    <tr>
        <th>Name</th>
        <th>Email</th>
    </tr>
    
    <% @users.each do |user| %>
        <tr>
            <td><%= "#{user.first_name} #{user.last_name}" %></td>
            <td><%= user.email %></td>
            <td><%= link_to 'show', show_user_path(user) %></td>
            <td><%= link_to 'edit', edit_user_path(user) %></td>
            <td><%= link_to 'delete', delete_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
</table>

<p><%= link_to 'Create New User', new_user_path %></p>